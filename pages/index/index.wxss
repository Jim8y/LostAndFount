/**index.wxss**/
.container{
  position: relative;
  width: 100%;
  height: 100vh;
}
.map-view{
  width: 100%;
  height: 100%;
  position: absolute;
}
#lafMap{
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.cover-bg {
  width: 750rpx;
  height: 100vh;
  text-align: center;
  line-height: 50px;
  background-color: #1AAD19;
  color: #fff;
  opacity: 0.2;
}

.view{
  width: 300rpx;
  height: 300rpx;
  background: black;
  opacity: 1;
}
.cover-view {
  position: absolute;
  width: 100%;
  line-height: 50px;
  background-color: white;
  display: flex;
  flex-direction: column;
  bottom: -240px;
}

.cover-view .item{
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom:  thin solid #cccccc;
  color: black;
  height: 40px;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.item .label{
  width: 200rpx;
  display: flex;
  align-items: flex-start;
  margin-left: 30rpx;
  font-weight: 100;
  font-size: 14px;

}
.item .content{

}

.cover-image{
  width: 100px;
  height: 100px;
  margin-top: 10px;
  margin-left: 60rpx;

}