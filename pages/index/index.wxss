/**index.wxss**/

.container {
  position: relative;
  width: 100%;
  height: 100vh;
}

.map-view {
  width: 100%;
  height: 100%;
  position: absolute;
}

#lafMap {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.cover-bg {
  width: 750rpx;
  height: 100vh;
  text-align: center;
  line-height: 50px;
  background-color: #1aad19;
  color: #fff;
  opacity: 0.2;
}

.view {
  width: 300rpx;
  height: 300rpx;
  background: black;
  opacity: 1;
}

.cover-view {
  position: absolute;
  width: 100%;
  height: 320px;
  background-color: white;
  display: flex;
  flex-direction: column;
  bottom: -320px;
}

.cover-view .item {
  display: flex;
  flex-direction: row;
  align-items: center;
  align-content: flex-start;
  border-bottom: thin solid #ccc;
  color: black;
  height: 40px;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.item .label {
  display: flex;
  width: 200rpx;
  align-items: flex-start;
  font-weight: 100;
  font-size: 14px;
}

.item .content {
  display: flex;
  align-items: flex-start;
  margin-left: 30rpx;
  font-weight: 100;
  font-size: 14px;
}

.cover-image {
  width: 100px;
  height: 100px;
  margin-top: 10px;
  margin-left: 60rpx;
}
