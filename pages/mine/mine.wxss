/* pages/mine/mine.wxss */

.scroll {
  width: 100%;
  height: 100%;
}

.inner {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 200rpx;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.title {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 80%;
  justify-content: space-between;
}

.title text {
  color: black;
  font-size: 14px;
}

.block {
  width: 750rpx;
  display: block;
  flex-direction: column;
  margin-top: 1rpx;
  justify-content: center;
}

.block .content {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 100rpx;
  justify-content: space-between;
  background-color: white;
  margin-top: 1rpx;
}

.content .left {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 30rpx;
}

.left image {
  width: 60rpx;
  height: 60rpx;
}

.left text {
  color: black;
  font-size: 14px;
  margin-left: 30rpx;
}

.content .right {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.right text {
  color: black;
  font-size: 14px;
  margin-left: 30rpx;
}

.right image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
