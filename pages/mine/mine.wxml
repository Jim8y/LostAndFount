<view class="container">
  <scroll-view scroll-y class="scroll">
    <view class="inner">
      <view class='title'>
        <text>"招"记录</text>
        <text>累计发布{{foundSum}}次</text>
      </view>

      <view class="block" wx:for="{{founds}}">
        <view class="content" data-id="{{index}}" bindtap='OnSelected'>
          <view class='left'>
            <image src='{{item.icon}}'></image>
            <text>{{item.label}}</text>
          </view>
          <view class='right'>
          <text>{{item.value}}</text>
          <image src='/images/right.png'></image>
           </view>
        </view>
      </view>
      <view class='title'>
        <text>"领"记录</text>
        <text>累计发布{{lostSum}}次</text>
      </view>

      <view class="block" wx:for="{{losts}}">
        <view class="content" data-id="{{index}}" bindtap='OnSelected'>
          <view class='left'>
            <image src='{{item.icon}}'></image>
            <text>{{item.label}}</text>
          </view>
          <view class='right'>
          <text>{{item.value}}</text>
          <image src='/images/right.png'></image>
           </view>
        </view>
      </view>
    </view>
  </scroll-view>
</view>